<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uptc.controller.CategoryController">
    <children>
        <Label layoutX="50.0" layoutY="50.0" text="Category Name:" />
        <TextField fx:id="category_name" layoutX="150.0" layoutY="50.0" />
        <Label layoutX="50.0" layoutY="100.0" text="Description:" />
        <TextField fx:id="description" layoutX="150.0" layoutY="100.0" />
        <Button fx:id="addCategory" layoutX="300.0" layoutY="50.0" text="Add Category" onAction="#saveCategory" />
    </children>
</VBox>