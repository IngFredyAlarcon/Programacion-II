<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uptc.controller.ProductController">
    <children>
        <Label layoutX="50.0" layoutY="50.0" text="Product Name:" />
        <TextField layoutX="150.0" layoutY="50.0" />
        
        <Label layoutX="50.0" layoutY="100.0" text="Price:" />
        <TextField layoutX="150.0" layoutY="100.0" />

        <ComboBox fx:id="comboboxCategory" layoutX="50.0" layoutY="150.0" prefWidth="90.0" promptText="choose">
            <items>
                <String fx:value="Technology" />
                <String fx:value="Network" />
                <String fx:value="Mobile" />
            </items>
        </ComboBox>

        
        <Button fx:id="addProduct" layoutX="250.0" layoutY="150.0" text="Save" onAction="#switchToMain" />
    </children>
    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>